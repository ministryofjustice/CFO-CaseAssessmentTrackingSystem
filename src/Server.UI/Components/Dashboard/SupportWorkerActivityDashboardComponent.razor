@using Cfo.Cats.Application.Features.Dashboard.Queries
@inherits CatsComponent<GetActivitiesPerSupportWorker.ActivitiesPerSupportWorkerDto>

@if (Loading)
{
    <MudLoading Text="Loading" />
}

@if (ErrorMessage is not null)
{
    <MudAlert Variant="Variant.Outlined" Severity="Severity.Error">
        @ErrorMessage
    </MudAlert>
}

@if (Data is not null)
{
    <MudGrid Spacing="2">
        <MudItem xs="12" Style="height: calc(100vh - 150px);">
            <SupportWorkerPaidActivityComponent DateRange="@DateRange" UserId="@UserId" @key="UserId + (DateRange!.Start?.Ticks ?? 0) + (DateRange.End?.Ticks ?? 0)" VisualMode="@VisualMode" />
        </MudItem>
    </MudGrid>
}
