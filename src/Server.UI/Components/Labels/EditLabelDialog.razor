@inherits OwningComponentBase<IMediator>

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Edit Label
        </MudText>
    </TitleContent>
    <DialogContent>

        <MudPaper MinHeight="300px" Elevation="0" Class="pa-4">
            <MudForm @ref="_form" Model="Model" Validation="@(Validator.ValidateValue(Model))">
                <MudGrid>
                    <MudItem xs="12">
                        <MudTextField T="string" @bind-Value="Model.NewName" For="@(() => Model.NewName)" Label="Name" Required="true" MaxLength="@LabelConstants.NameMaximumLength" data-1p-ignore/>
                        <MudText Color="Color.Secondary">
                            Characters: @Model.NewName.Length / @LabelConstants.NameMaximumLength
                        </MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudTextField T="string" @bind-Value="Model.NewDescription"  For="@(() => Model.NewDescription)" Label="Description" Lines="3" MaxLength="@LabelConstants.DescriptionMaximumLength"
                                      Required="true" Immediate="true" />
                        <MudText Color="Color.Secondary">
                            Characters: @Model.NewDescription.Length / @LabelConstants.DescriptionMaximumLength
                        </MudText>
                    </MudItem>
                    <MudItem xs="12">
                        <MudEnumSelect TEnum="AppColour" Required="true" Label="Colour" For="@(() => Model.NewColour)" @bind-Value="Model.NewColour" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudEnumSelect TEnum="AppVariant" Required="true" Label="Style" For="@(() => Model.NewVariant)" @bind-Value="Model.NewVariant" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudEnumSelect TEnum="AppIcon" Required="true" Label="Icon" For="@(() => Model.NewAppIcon)" @bind-Value="Model.NewAppIcon" />
                    </MudItem>
                    <MudItem xs="12">
                        <MudStack Row="true" AlignItems="AlignItems.Start" Justify="Justify.SpaceBetween" Spacing="2">
                            <MudText Typo="Typo.body2">Example</MudText>
                            <CatsChip Label="@Model.NewName" Variant="@Model.NewVariant" Colour="@Model.NewColour" Icon="@Model.NewAppIcon" />
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudForm>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Cancel</MudButton>
        <MudLoadingButton Color="Color.Primary" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" Loading="@_saving" OnClick="Add">@ConstantString.Save</MudLoadingButton>
    </DialogActions>
</MudDialog>