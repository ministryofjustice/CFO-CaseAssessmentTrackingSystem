<MudContainer Class="d-flex flex-column align-center justify-center">
    <MudIconButton Icon="@Icons.Material.Filled.Done" Color="@Color.Success" Size="Size.Large" />
    <MudText Typo="Typo.h6">Success</MudText>
    @foreach (var success in Successes)
    {
        <MudText>@success</MudText>
    }
    <MudContainer Class="d-flex px-0 mt-8 justify-space-between">
        <MudButton Color="Color.Secondary" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.RestartAlt" OnClick="BackToSearch">Back to Search</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.NotStarted" OnClick="() => NavigateToEnrolment(ParticipantId)">Proceed with the enrolment</MudButton>
    </MudContainer>
</MudContainer>

@code {
    [Parameter]
    public string ParticipantId { get; set; } = default!;

    [Parameter]
    public string[] Successes { get; set; } = [];

    private void NavigateToEnrolment(string participantId) => Navigation.NavigateTo($"/Enrolments/{participantId}");

    private void BackToSearch() => Navigation.NavigateTo($"/Enrolments/Search", true);

}