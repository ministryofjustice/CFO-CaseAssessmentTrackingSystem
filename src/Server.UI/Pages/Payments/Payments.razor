@using Cfo.Cats.Application.SecurityConstants
@using Cfo.Cats.Server.UI.Pages.Payments.Components
@using Toolbelt.Blazor.HotKeys2

@page "/pages/finance/payments/"


@attribute [Authorize(Roles = $"{RoleNames.SystemSupport}, {RoleNames.QAManager}, {RoleNames.QASupportManager}, {RoleNames.SMT}, {RoleNames.PerformanceManager}")]

<MudText Typo="Typo.h2">Payables</MudText>


<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
    <MudTabPanel text="Enrolments">
        <EnrolmentPayments Month="@Month" Year="@Year"/>
    </MudTabPanel>
    <MudTabPanel Text="Inductions">
        <InductionPayments Month="@Month" Year="@Year"  />
    </MudTabPanel>
    <MudTabPanel Text="Activities">
        <ActivityPayments Month="@Month" Year="@Year"  />
    </MudTabPanel>
    <MudTabPanel Text="Education & Training">
        <EducationPayments Month="@Month" Year="@Year" />
    </MudTabPanel>
    <MudTabPanel Text="Employments">
        <EmploymentPayments Month="@Month" Year="@Year"  />
    </MudTabPanel>
</MudTabs>


@code{

    public int Month { get; set; } = DateTime.Now.Month;
    public int Year { get; set; } = DateTime.Now.Year;

}

