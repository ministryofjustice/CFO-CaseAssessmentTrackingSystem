@using Cfo.Cats.Domain.Common.Enums;
@using MudBlazor
@inherits MudChip<string>   

<MudChip T="string" @attributes="UserAttributes" Class="@Class" Style="@Style" Color="@Color">
    <MudIcon Icon="@Icon" />
    @Status.Name
</MudChip>

@code {


    [Parameter, EditorRequired]
    public EnrolmentStatus Status { get; set; } = default!;

    public new string Icon => GetIconForStatus(Status);

    private string GetIconForStatus(EnrolmentStatus status)
    {
        // Replace with your actual status enum and icon mapping
        return status switch
        {
            _ when status == EnrolmentStatus.IdentifiedStatus  => Icons.Material.Filled.Autorenew,
            _ when status == EnrolmentStatus.EnrollingStatus => Icons.Material.Filled.Description,
            _ when status == EnrolmentStatus.SubmittedToProviderStatus => Icons.Material.Filled.AssignmentTurnedIn,
            _ when status == EnrolmentStatus.SubmittedToAuthorityStatus => Icons.Material.Filled.AssignmentTurnedIn,
            _ when status == EnrolmentStatus.ApprovedStatus => Icons.Material.Filled.Check,
            _ when status == EnrolmentStatus.ArchivedStatus => Icons.Material.Filled.Block,
            _ when status == EnrolmentStatus.DormantStatus => Icons.Material.Filled.Cancel,
            _ => Icons.Material.Filled.HelpOutline
        };
    }
}    
