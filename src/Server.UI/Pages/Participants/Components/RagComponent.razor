@using Cfo.Cats.Domain.Common.Enums
@using System.Data


<MudChip T="string" Icon="@Pathway.Icon" Label="true" Color="GetColor(State)">
    @Pathway.Name
</MudChip>

@code {
    [Parameter, EditorRequired]
    public RagState State { get; set; } = RagState.Red;

    [Parameter, EditorRequired]
    public Pathway Pathway { get; set; } = default!;
    private Color GetColor(RagState state) =>
        state switch
        {
            RagState.Green => Color.Success,
            RagState.Red => Color.Error,
            RagState.Amber => Color.Warning,
            _ => Color.Primary
        };
}