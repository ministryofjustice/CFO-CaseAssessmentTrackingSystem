@using Cfo.Cats.Application.Features.Participants.DTOs;
@inherits CatsComponentBase

@if (ParticipantEnrolmentHistory.Any() is false)
{
    <MudText>No participant activity.</MudText>
}
else
{
    <MudDataGrid Items="@ParticipantEnrolmentHistory" Striped="true">
        <Columns> 
                <PropertyColumn Property="x => x.ActionDate.ToShortDateOrEmptyString()" SortBy="x => x.ActionDate" Title="Date"
                        CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.Status" Title="Status"
                                CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.Event" Title="Event"
                                CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.Reason" Title="Reason"
                                CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.AdditionalInformation" Title="Additional Info"
                                CellStyle="width: 40px; white-space: wrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.LocationName" Title="Location"
                                CellStyle="width: 40px; white-space: wrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.SupportWorker" Title="Performed By"
                                CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
                <PropertyColumn Property="x => x.DaysSincePrevious" Title="Days"
                                CellStyle="width: 40px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                </PropertyColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="ParticipantEnrolmentHistoryDto" />
        </PagerContent>
    </MudDataGrid>
}