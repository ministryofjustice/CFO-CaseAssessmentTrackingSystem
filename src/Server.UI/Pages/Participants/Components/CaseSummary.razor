            <!-- This will need moving out from here when the rest of the components are done. -->
            <ParticipantDetailsCardComponent ParticipantId="@ParticipantSummaryDto.Id"/>
        </MudItem>

        <!-- Assessment -->
        <MudItem xs="12" md="4">
            <AssessmentSummary />
        </MudItem>

        <!-- Risk -->
        <MudItem xs="12" md="4">
            <RiskSummary />
        </MudItem>

        <!-- Bio -->
        <MudItem xs="12" md="4">
            <BioSummary />
        </MudItem>

        <!-- Pathway Plan -->
        <MudItem xs="12" md="4">
            <PathwayPlanSummary />
        </MudItem>

