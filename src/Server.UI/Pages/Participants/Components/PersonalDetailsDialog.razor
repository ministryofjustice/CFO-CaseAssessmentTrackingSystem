@inherits CatsComponentBase

<MudDialog>
    <DialogContent>
        <MudPaper Elevation="0">
            @if (Model is not null)
            {
                <MudForm @ref="form" Model="Model" Validation="@(Validator.ValidateValue(Model))">
                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField Class="mb-2" Label="@Model.PersonalDetails.GetMemberDescription(x => x.PreferredNames)" @bind-Value="Model.PersonalDetails.PreferredNames" For="() => Model.PersonalDetails.PreferredNames" Clearable MaxLength="128" Counter="128" Immediate />
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField Class="mb-2" Label="@Model.PersonalDetails.GetMemberDescription(x => x.PreferredPronouns)" @bind-Value="Model.PersonalDetails.PreferredPronouns" For="() => Model.PersonalDetails.PreferredPronouns" Clearable MaxLength="16" Counter="16" Immediate />
                        </MudItem>
                    </MudGrid>
                </MudForm>
            }
        </MudPaper>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Dialog.Cancel">@ConstantString.Cancel</MudButton>
        <MudLoadingButton Loading="saving" Color="Color.Primary" OnClick="Submit">@ConstantString.Save</MudLoadingButton>
    </DialogActions>
</MudDialog>