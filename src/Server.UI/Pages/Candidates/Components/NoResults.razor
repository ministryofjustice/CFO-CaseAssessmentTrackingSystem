<MudContainer Class="d-flex flex-column align-center justify-center">

    <MudAlert Severity="Severity.Error" Variant="Variant.Outlined">
        No candidates were found which match your search criteria. Please double-check your criteria, and provide more information to refine your search.
    </MudAlert>

    <MudContainer Class="d-flex px-0 mt-8 justify-space-between">
        <MudButton Color="Color.Error" Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.RestartAlt" OnClick="BackToSearch">Back to Search</MudButton>
    </MudContainer>

</MudContainer>

@code 
{
    [Parameter]
    public EventCallback OnCanceled { get; set; }
    private Task BackToSearch() => OnCanceled.InvokeAsync();
}