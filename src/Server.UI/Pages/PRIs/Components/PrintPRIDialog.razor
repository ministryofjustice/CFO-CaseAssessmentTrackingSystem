<style>
    @@media print {
        /* Hide navigation and other non-printable elements */
        ::deep .mud-appbar,
        ::deep .mud-drawer,
        ::deep .mud-button,
        ::deep .no-print {
            display: none !important;
        }

        /* Ensure white background and black text */
        ::deep body {
            background-color: white !important;
            color: black !important;
        }

        /* Force page breaks before specific elements */
        ::deep .page-break-before {
            page-break-before: always;
        }

        /* Avoid page breaks inside elements */
        ::deep .keep-together {
            page-break-inside: avoid;
        }

        /* Ensure tables span across pages properly */
        ::deep .mud-table {
            page-break-inside: auto;
        }

        /* Keep table headers on each page */
        ::deep .mud-table-head {
            display: table-header-group;
        }

        /* Allow row breaks */
        ::deep .mud-table-row {
            page-break-inside: avoid;
        }

        /* Set margins */
        @@page {
            margin: 2cm;
        }

        /* Ensure links show their URLs */
        ::deep a[href]:after {
            content: " (" attr(href) ")";
        }

        /* Handle MudPaper components */
        ::deep .mud-paper {
            box-shadow: none !important;
            border: 1px solid #ddd;
        }
    }

    .logo-container {
        display: flex;
        justify-content: flex-start; /* Align logos to the left of the grid cell */
    }

    .text-container {
        display: flex;
        justify-content: center; /* Center the title */
        align-items: center; /* Vertically center the title */
    }

    .logo {
        width: 50px; /* Adjust logo size */
        height: auto;
    }

    .title {
        font-size: 24px; /* Adjust title size */
    }
</style>

